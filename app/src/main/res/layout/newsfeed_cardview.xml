<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/RL_Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/news_display_block_green">


        <TextView
            android:id="@+id/news_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="TerraCycle partnership sees toy recycling programme extended to UK" />

        <ImageView
            android:id="@+id/news_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_news_feed" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>