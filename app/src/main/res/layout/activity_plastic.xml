<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <com.synnapps.carouselview.CarouselView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:pageColor="#000000"
        app:fillColor="#ffffff"
        app:slideInterval="3000"
        app:radius="6dp"
        app:strokeColor="#ff777777"
        app:strokeWidth="1dp"
        android:id="@+id/Plastic_carousel"
        >

    </com.synnapps.carouselview.CarouselView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Plastic_carousel"
        android:textSize="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginHorizontal="10dp"
        android:text="Facts" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:text='"One recycled plastiuc bottle is able to save enough energy to power up to 60W light bulb for 6 hours"'
        android:background="@drawable/fact_display_block"/>

</RelativeLayout>