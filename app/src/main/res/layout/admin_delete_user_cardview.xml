<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/adminnews_display_block">

        <ImageView
            android:id="@+id/admin_UserManimageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/ic_user" />
        <TableLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/admin_UserManimageView">

            <TableRow android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name : "
                android:textSize="13dp"
                android:textStyle="bold"/>
             </TableRow>

            <TableRow android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Email : "
                    android:textSize="13dp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/admin_deletebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            android:text="LONG PRESS TO DELETE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF0000"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>