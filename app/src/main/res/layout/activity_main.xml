<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#A9BA78">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/GTRRLogo_main"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            app:srcCompat="@drawable/recycle" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/GTRRLogo_main"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="244dp"
            android:text="Welcome to GTRR"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="31dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="130dp"
            android:background="@drawable/rounded_corner_button"
            android:text="Login" />

        <Button
            android:id="@+id/to_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_login"
            android:layout_marginTop="31dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="130dp"
            android:background="@drawable/rounded_corner_button_white"
            android:text="REGISTER"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>